---
import { localizePath } from "../languages";
import Base from "../layouts/Base.astro";
import { t, changeLanguage } from "i18next";

import { buildStaticPaths } from "astro-react-i18next/utils";

export function getStaticPaths() {
  return buildStaticPaths();
}
---

<Base title="404">
  <div
    class="max-w-screen-sm mx-auto flex-grow flex flex-col justify-center items-center"
  >
    <h1 class="font-serif text-secondary text-4xl font-bold my-10">
      404 File not found
    </h1>
    <a href={localizePath("en", "/")} class="btn btn-primary">
      {t("home")}
    </a>
  </div>
</Base>
