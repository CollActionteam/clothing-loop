---
import { localizePath } from "../languages";
import Base from "../layouts/Base.astro";
import { t, changeLanguage } from "i18next";

const { lang = "en" } = Astro.params;
changeLanguage(lang);
---

<Base title="404">
  <div
    class="max-w-screen-sm mx-auto flex-grow flex flex-col justify-center items-center"
  >
    <h1 class="font-serif text-secondary text-4xl font-bold my-10">
      404 File not found
    </h1>
    <a href={localizePath(lang, "/")} class="btn btn-primary">
      {t("home")}
    </a>
  </div>
</Base>
