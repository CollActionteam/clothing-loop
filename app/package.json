{
  "name": "org.clothingloop.app",
  "description": "My Clothing Loop App",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "VITE_APP_VERSION=$(git describe --tags --always) vite",
    "dev:android": "ionic capacitor copy android && ionic capacitor run android -l --external",
    "dev:ios": "ionic capacitor copy ios && ionic capacitor run ios -l --external",
    "build:development": "tsc && VITE_APP_VERSION=$(git describe --tags --always) vite build --mode development",
    "build:production": "tsc && VITE_APP_VERSION=$(git describe --tags --always) vite build --mode production",
    "build:android:production": "npm run build:production && ionic capacitor copy --no-build android; echo 'open android studio and build a bundle\nBuild -> Generate Signed Bundle/APK -> Android App Bundle -> '",
    "build:ios:production": "npm run build:production && ionic capacitor copy --no-build ios; echo 'open xcode and build a bundle\nBuild -> Generate Signed Bundle/APK -> Android App Bundle -> '",
    "preview": "vite preview",
    "generate:icons": "npx capacitor-assets generate",
    "lint": "prettier -w ."
  },
  "dependencies": {
    "@capacitor/android": "^5.1.1",
    "@capacitor/app": "5.0.5",
    "@capacitor/assets": "^2.0.4",
    "@capacitor/camera": "^5.0.5",
    "@capacitor/clipboard": "^5.0.5",
    "@capacitor/core": "5.1.1",
    "@capacitor/haptics": "5.0.5",
    "@capacitor/ios": "5.1.1",
    "@capacitor/keyboard": "^5.0.5",
    "@capacitor/share": "^5.0.5",
    "@capacitor/splash-screen": "^5.0.5",
    "@capacitor/status-bar": "5.0.5",
    "@ionic/core": "^7.1.2",
    "@ionic/react": "^7.1.2",
    "@ionic/react-router": "^7.1.2",
    "@ionic/storage": "^4.0.0",
    "@types/react-router": "^5.1.20",
    "@types/react-router-dom": "^5.3.3",
    "dayjs": "^1.11.9",
    "i18next": "^23.2.10",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-http-backend": "^2.2.1",
    "ionicons": "^7.1.2",
    "onesignal-cordova-plugin": "^3.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.0.2",
    "react-onesignal": "^2.0.4",
    "react-router": "*",
    "react-router-dom": "*",
    "redaxios": "^0.5.1",
    "use-debounce": "^9.0.4",
    "use-long-press": "^3.1.5"
  },
  "devDependencies": {
    "@capacitor/cli": "5.1.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@vitejs/plugin-react": "^4.0.3",
    "cypress": "^12.17.1",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.3",
    "vite-plugin-pwa": "^0.16.4"
  }
}
