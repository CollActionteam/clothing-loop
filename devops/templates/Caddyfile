acc.clothingloop.org {
	log {
		output file /var/log/caddy/acc.clothingloop.org-error.log
		format console
		level ERROR
	}

	handle_path /api/* {
		reverse_proxy 127.0.0.1:8082
	}

	handle {
		root * /var/caddy/acc.clothingloop.org
		file_server
		encode zstd gzip
		try_files {path} /index.html
	}
}
